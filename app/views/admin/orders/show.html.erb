<h1><strong>注文履歴詳細</strong></h1>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table>
        <tr>
          <th>購入者</th>
          <tb><%= @customer.full_name %></tb>
        </tr>
        <tr>
          <th>注文日</th>
          <tb><%= @order.created_at %></tb>
        </tr>
        <tr>
          <th>配送先</th>
          <tb><%= @order.shipping_address %></tb>
        </tr>
        <tr>
          <th>支払方法</th>
          <tb><%= @order.payment_method %></tb>
        </tr>
      </table>
    </div>
    <div class="col-md-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @order_details.each do |order_detail| %>
            <tb><%= order_detail.item.name %></tb>
            <tb><%= order_detail.price %></tb>
            <tb><%= order_detail.amount %></tb>
            <tb><%= order_detail.amount * order_detail.price %></tb>
            <tb><%=%></tb>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table>
        <tr>
          <th></th>
          <tb></tb>
        </tr>
        <tr>
          <th></th>
          <tb></tb>
        </tr>
        <tr>
          <th></th>
          <tb></tb>
        </tr>
        <tr>
          <th>商品合計</th>
          <tb><%= @total.round.to_s(:delimited)%></tb>
        </tr>
        <tr>
          <th>送料</th>
          <tb><%= @order.postage %></tb>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <tb><%= @order.total_payment %></tb>
        </tr>
      </table>
    </div>
  </div>
</div>