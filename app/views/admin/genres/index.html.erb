<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h1><strong>ジャンル一覧・追加</strong></h1>
    </div>
  </div>
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <% @genre.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
  <div class="row">
    <div class="col-md-6">
      <table>
        <thead>
          <tr>
            <th>ジャンル名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <th><%= genre.name %></th>
            <td></td>
            <td></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>