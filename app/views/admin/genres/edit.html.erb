<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-3">
      <h1><strong>ジャンル編集</strong></h1>
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form_with model:@genre,url: admin_genre_path, local: true do |f| %>
      <p>ジャンル名<%= f.text_field :name %><%= f.submit "変更を保存", class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>