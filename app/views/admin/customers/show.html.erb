<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-3">
      <h1><strong><%= @customer.full_name %>さんの会員詳細</strong></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-1 col-md-8">
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <tr>
        <th><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></th>
        <th><%= link_to "注文履歴一覧を見る", admin_homes_path, class: "btn btn-primary" %></th>
      </tr>
    </div>
  </div>
</div>