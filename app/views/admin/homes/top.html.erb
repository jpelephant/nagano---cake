<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9">
      <table>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= link_to order_detail.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order_detail) %></td>
          <td><%= order_detail.order.shipping_address_name %></td>
          <td><%= order_detail.amount %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <%= paginate @order_details, class: "btn btn-link" %>
</div>