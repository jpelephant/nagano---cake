<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9">
      <table>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
        <% @order.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order) %></td>
          <td><%= order.shipping_address_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <%= paginate @order, class: "btn btn-link" %>
</div>