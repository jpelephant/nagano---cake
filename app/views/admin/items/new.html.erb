<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-3">
      <h1><strong>商品新規登録</strong></h1>
    </div>
  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <% @item.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  </div>
  <%= form_with model: @item,url: admin_items_path, local:true do |f| %>
  <div class="row">
    <div class="col-md-offset-3 col-md-5">
      <table>
        <tr>
          <th>商品画像</th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, 0 %>販売中
              <%= f.radio_button :is_active, 1 %>販売停止中
          </td>
        </tr>
      </table>
      <center>
      <%= f.submit'新規投稿', class: "btn btn-success" %>
      </center>
    </div>
  <% end %>
  </div>
</div>