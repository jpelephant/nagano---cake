<p id="notice"></p>
<h1><strong>配送先登録/一覧</strong></h1>
<% if @shipping_address.errors.any? %>
  <%= @shipping_address.errors.count %>件のエラーが発生しました
  <% @shipping_address.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @shipping_address, local:true do |f| %>
      <div class="label">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="label">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
      <div class="label">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <%= f.submit"新規登録", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table border="1">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <% @shipping_addresses.each do |shipping_address| %>
        <tbody>
          <tr>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-success" %><%= link_to "削除する", shipping_address_path(shipping_address), class: "btn btn-danger", method: :delete %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>