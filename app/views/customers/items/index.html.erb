<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'customers/homes/genre', genres: @genres %>
    </div>
  </div>
      <h4><strong>商品一覧</strong></h4>
  <div class="row">
    <%= @items.each do |item| %>
    <div class="col-md-1"></div>
    <div class="col-lg-2 col-md-6 mb-3">
      <tr>
        <th><%= attachment_image_tag item, :image, format: 'jpeg', size: "150x150" %></th>
      </tr>
      <tr>
        <th><%= link_to item.name, item_path(item) %></th>
      </tr>
      <tr>
        <th>¥<%= item.add_tax_item_price.to_s(:dalimited) %></th>
      </tr>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>