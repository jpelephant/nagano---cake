<h1><strong>注文情報確認</strong></h1>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        <tr>
          <td><%= attachment_image_tag @item, :image %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= @subtotal %></td>
        <% end %>
        </tr>
      </table>
    </div>
      <div class="col-md-4">
        <table>
          <tr>
            <td>送料</td>
            <th></th>
          </tr>
          <tr>
            <td>商品合計</td>
            <th>¥<%= @total.round.to_s(:delimited)%></th>
          </tr>
          <tr>
            <td>請求金額</td>
            <th>¥<%= @total.round.to_s(:delimited)%></th>
          </tr>
        </table>
      </div>
    <div class="row">
      <div class="col-md-10">
        <table>
          <tr>
            <th>支払方法</th>
            <td>
              <% if @order.payment_method %>
              クレジットカード
              <% else %>
              銀行振込
              <% end %>
            </td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>
              <%= @order.shipping_postal_code %>
              <%= @order.shipping_address %>
              <%= @order.shipping_address_name %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="senter">
      <%= link_to "注文を確定する"  %>
    </div>
  </div>
</div>