<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <h5><strong>注文情報入力</strong></h5>
    </div>
  </div>
  <div class="row">
    <h4>支払方法</h4>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <table>
        <%= form_with model: @order, url: orders_verification_path, local:true do |f| %>
        <tr>
          <th>
            <%= f.radio_button :payment_method, :credit_card, checked: true %>クレジットカード
          </th>
        </tr>
        <tr>
          <th>
            <%= f.radio_button :payment_method, :transfer %>銀行振り込み
          </th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h5><strong>お届け先</strong></h5>
  </div>
  <div class="row">
   <div class="col-md-1"></div>
    <div class="col-md-8">
      <table>
        <tr>
          <th>
            <%= f.radio_button :select_address, 0, checked: true %>ご自身の住所
          </th>
        </tr>
        <tr>
          <td>
            〒<%= @customer.postal_code %><%= @customer.address %><%= @customer.full_name %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9">
      <table>
        <tr>
          <th>
            <%= f.radio_button :select_address, 1 %>登録済み住所から選択
          </th>
        </tr>
        <tr>
          <td>
            <%= f.collection_select :shipping_address_id, current_customer.shipping_addresses.all, :id, :full_address %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="#col-md-10">
      <%= f.radio_button :select_address, 2 %>新しいお届け先
      <div class="label">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="label">
        <%= f.label :address, "住所"  %>
        <%= f.text_field :address %>
      </div>

      <div class="label">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
    </div>
  </div>
  <center>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </center>
    <% end %>
</div>