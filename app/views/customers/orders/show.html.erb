<h1><strong>注文履歴詳細</strong></h1>

<h2>注文情報</h2>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>注文情報</h1>
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.hipping_postal_code %><%= @order.shipping_address %><%= @order.shipping_address_name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h2>請求情報</h2>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h3>注文内容</h3>
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= @subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>