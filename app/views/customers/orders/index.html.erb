<h1><strong>注文履歴一覧</strong></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table border="1">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @order.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              〒<%= order.shipping_postal_code %><br>
              <%= order.shipping_address %><br>
              <%= order.shipping_address_name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <span><%= order_detail.item.name %></span><br>
              <% end %>
            </td>
            <td><%= order.order_details.inject(0) { |sum, item| sum + item.sum_of_price } %></td>
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @order, class: "btn btn-link" %>
    </div>
  </div>
</div>