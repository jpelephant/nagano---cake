<h1><strong>注文履歴一覧</strong></h1>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% @order.each do |order| %>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.name%></td>
        <td><%= order.total_payment %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
      </tbody>
    <% end %>
    </div>
  </div>
</div>