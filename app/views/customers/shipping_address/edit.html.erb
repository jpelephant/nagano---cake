<h1><strong>配送先編集</strong></h1>

<div class="container">
  <div class="row">
    <%= from_with model:@address local :ture do |f| %>
    <div class="col-md-10">
      <div class="table">
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>
        <tr>
          <th>宛名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit '変更内容を保存' %></th>
        </tr>
      </div>
    </div>
  </div>
</div>