<h1><strong>配送先登録/一覧</strong></h1>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= from_with model:@Address, local: ture do |f| %>
      <div class="table">
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%=f.text_field :name %></td>
        </tr>
        <%= f.submit '新規登録' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <%= @Addresses.each do |address| %>
      <div class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する" edit_shipping_address_path %><%= link_to "削除する", address_path(@address), method: :delete %></td>
          </tr>
        </tbody>
      </div>
      <% end%>
    </div>
  </div>
</div>