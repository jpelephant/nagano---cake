<p id="notice"></p>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2">
    <h3><strong>会員情報編集</strong></h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model:@customer,url: customer_path, local:true do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-12">
      <center>
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
        <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
      </center>
    </div>
    <% end %>
  </div>
</div>