<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2">
    <h3><strong>マイページ</strong></h3>
  </div>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2">
    <table>
      <tr>
        <th><strong>登録情報</strong></th>
        <th><%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %></th>
      </tr>
    </table>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>カナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table>
        <tr>
          <th>配送先</th>
          <th><%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %></th>
        </tr>
        <tr>
          <th>注文履歴</th>
          <th><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>