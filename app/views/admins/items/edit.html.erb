<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1><strong>商品編集</strong></h1>
    </div>
  </div>
  <div class="row">
    <%= form_with model:@item, local: ture do |f| %>
    <div class="col-md-offset-4 col-md-4">
      <table>
        <tr>
          <th>商品画像</th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.select :genre_id, @Genre.all, @Genre.name %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>
      </table>
      <%= f.submit '変更を保存' %>
    </div>
  </div>
</div>